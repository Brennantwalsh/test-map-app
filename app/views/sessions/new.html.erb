
<div class="transparent">
  
<h2 class="journey">Return to Battle</h2>

<%= form_tag '/login', method: :post do %>
  <div class="journey">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="journey">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="journey"><%= submit_tag 'Log In', class: "btn btn-info" %></div>

<% end %>
</div>